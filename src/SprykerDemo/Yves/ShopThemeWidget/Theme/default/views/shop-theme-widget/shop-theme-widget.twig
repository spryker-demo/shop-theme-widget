{% extends template('widget') %}

{% define data = {
    styles: _widget.data
} %}

{% block body %}
    {% set styles = data.styles %}

    {% if styles | length %}
        <style>
            :root {
                {% if styles.headerColor is defined and styles.headerColor != '#0000' %}
                    --setting-color-header-background: {{ styles.headerColor }};
                {% endif %}

                {% if styles.headerTopbarColor is defined and styles.headerTopbarColor != '#0000' %}
                    --setting-color-header-topbar-background: {{ styles.headerTopbarColor }};
                {% endif %}

                {% if styles.headerNavigationBackground is defined and styles.headerNavigationBackground != '#0000' %}
                    --setting-color-navigation-background: {{ styles.headerNavigationBackground }};
                {% endif %}

                {% if styles.headerNavigationTextColor is defined and styles.headerNavigationTextColor != '#0000' %}
                    --setting-color-navigation-text-color: {{ styles.headerNavigationTextColor }};
                {% endif %}

                {% if styles.footerColor is defined and styles.footerColor != '#0000' %}
                    --setting-color-footer-background: {{ styles.footerColor }};
                {% endif %}

                {% if styles.footerBottomLineBackground is defined and styles.footerBottomLineBackground != '#0000' %}
                    --setting-color-footerBottomLineBackground: {{ styles.footerBottomLineBackground }};
                {% endif %}

                {% if styles.footerBottomLineTextColor is defined and styles.footerBottomLineTextColor != '#0000' %}
                    --setting-color-footerBottomLineTextColor: {{ styles.footerBottomLineTextColor }};
                {% endif %}

                {% if styles.buttonPrimaryColor is defined and styles.buttonPrimaryColor != '#0000' %}
                    --setting-color-primary-button-background: {{ styles.buttonPrimaryColor }};
                {% endif %}

                {% if styles.buttonSecondaryColor is defined and styles.buttonSecondaryColor != '#0000' %}
                    --setting-color-alternative-button-background: {{ styles.buttonSecondaryColor }};
                {% endif %}
            }
        </style>
    {% endif %}
{% endblock %}
