{# @var styles \Generated\Shared\Transfer\ShopThemestylesTransfer #}
{% extends template('widget') %}

{% define data = {
    styles: _widget.data
} %}

{% block body %}
    {% set shopThemeData = data.styles %}

    {% set colorKeys = [
        'headerTopBackgroundColor', 'headerTopTextColor', 'headerTopIconColor',
        'headerMainBackgroundColor', 'headerMainTextColor', 'headerMainIconColor',
        'headerBottomBackgroundColor', 'headerBottomTextColor', 'headerBottomIconColor',
        'footerNewsletterSectionBackgroundColor','footerNewsletterSectionTextColor','footerNewsletterSectionIconColor',
        'footerLogoSectionBackgroundColor','footerLogoSectionTextColor','footerLogoSectionIconColor',
        'footerNavigationSectionBackgroundColor','footerNavigationSectionTextColor','footerNavigationSectionIconColor',
        'footerCopyrightSectionBackgroundColor','footerCopyrightSectionTextColor','footerCopyrightSectionIconColor'

    ] %}

    <style>
        :root {
            {% for color in colorKeys %}
                {% set colorEnableKey = color ~ 'Enabled' %}
                {% if shopThemeData[color] is defined and shopThemeData[color] is not null and shopThemeData[colorEnableKey] is defined and shopThemeData[colorEnableKey] %}
                    --{{ color }}: {{ shopThemeData[color] }};
                {% endif %}
            {% endfor %}
        }
    </style>
{% endblock %}
