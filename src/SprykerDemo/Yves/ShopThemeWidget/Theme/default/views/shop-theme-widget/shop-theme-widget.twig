{# @var styles \Generated\Shared\Transfer\ShopThemestylesTransfer #}
{% extends template('widget') %}

{% define data = {
    shopThemeYves: _widget.data['shopThemeYves']
} %}

{% block body %}
    <style>
        {% if data.shopThemeYves %}
            {{ data.shopThemeYves['css'] | replace({
                '<p><br></p>': '',
            }) | raw }}
        {% endif %}

        :root {
            {% for colorName,color in data.shopThemeYves %}
                {% if colorName != 'css' and color is not null and color.isEnabled %}
                    --{{ colorName }}: {{ color.color }};
                {% endif %}
            {% endfor %}
        }
    </style>
{% endblock %}
